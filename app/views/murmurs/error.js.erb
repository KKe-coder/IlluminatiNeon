<% if params[:murmur][:body] == "" %>
  $(".murmurs_header").html("<span class=\"text-light\">空白のつぶやきはできません!!</span>").hide().fadeIn('slow');
<% else %>
  $(".murmurs_header").html("<span class=\"text-light\">つぶやきが長すぎます！！(30文字以内)</span>").hide().fadeIn('slow');
  $("#murmur_body").val("")
<% end %>
$('#create_murmur').html('<i class="fas fa-exclamation-triangle"></i>');
var errormurmur = function(){$(".murmurs_header").html("<%= j(render 'shared/create_murmur') %>").hide().fadeIn('slow');}
var vaildmurmurmark = function(){$('#create_murmur').html('<i class="fas fa-pen-nib"></i>');}
setTimeout(errormurmur, 2000);
setTimeout(vaildmurmurmark, 2000);