<% if params[:review][:comment] == "" %>
  $(".reviews").html("<h4 class=\"text-light text-center mt-3\"><i class=\"fas fa-exclamation-triangle\"></i>空白のレビューはできません!!</h4>").hide().fadeIn('slow');
<% elsif params[:review][:comment].length > 20 %>
  $(".reviews").html("<h4 class=\"text-light text-center mt-3\"><i class=\"fas fa-exclamation-triangle\"></i>レビューが長すぎます!!(20文字以内)</h4>").hide().fadeIn('slow');
  $("#review_comment").val("")
<% else %>
  $(".reviews").html("<h4 class=\"text-light text-center mt-3\"><i class=\"fas fa-exclamation-triangle\"></i>評価の値が正しくありません!!</h4>").hide().fadeIn('slow');
<% end %>
var errorreview = function(){$(".reviews").html("<%= j(render 'shared/show_reviews') %>").hide().fadeIn('slow');}
setTimeout(errorreview, 2000);